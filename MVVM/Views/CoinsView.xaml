<Page x:Class="CryptocurrencyWPFApp.MVVM.Views.CoinsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptocurrencyWPFApp.MVVM.ViewModels"
      mc:Ignorable="d" 
      Width="1080" Height="720">

    <Page.DataContext>
        <local:CoinsViewModel/>
    </Page.DataContext>

    <Border Background="{StaticResource LightThemeMainBackgroundBrush}">

        <!--Page Content-->
        <Grid
            Margin="20, 20, 20, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--List Title-->
            
            <TextBlock
                Grid.Row="0"
                Text="Coins"
                FontSize="20"
                FontWeight="Bold"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="0, 0, 0, 20"/>
            
            <!--List: Currencies-->
            <DataGrid Grid.Row="1" ItemsSource="{Binding Currencies}"/>
        </Grid>
    </Border>
</Page>
